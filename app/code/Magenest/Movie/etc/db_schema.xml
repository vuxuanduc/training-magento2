<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_docs" resource="default" engine="innodb" comment="Docs Table">
        <column xsi:type="smallint" name="docs_id" padding="6" unsigned="false" nullable="false" identity="true"
                comment="Docs ID"/>
        <column xsi:type="text" name="url" nullable="false" comment="Url"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="docs_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="CATALOG_PRODUCT_ENTITY_ENTITY_ID_MAGENEST_DOCS_PRODUCT_ID"
                    table="magenest_docs" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>
