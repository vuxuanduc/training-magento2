<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_blog" resource="default" engine="innodb" comment="Blog Table">
        <column xsi:type="smallint" name="blog_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Blog ID"/>
        <column xsi:type="int" name="author_id" unsigned="true" nullable="false" comment="Author ID" />
        <column xsi:type="varchar" name="title" nullable="false" comment="Blog Title"/>
        <column xsi:type="text" name="description" nullable="false" comment="Blog Description"/>
        <column xsi:type="text"  name="content" nullable="false" comment="Blog Content" />
        <column xsi:type="varchar" name="url_rewrite" nullable="false" comment="Blog Url Rewrite"/>
        <column xsi:type="varchar" name="status" nullable="false" comment="Blog Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="blog_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ADMIN_USER_USER_ID_MAGENEST_BLOG_AUTHOR_ID" table="magenest_blog" column="author_id"
                    referenceTable="admin_user" referenceColumn="user_id"/>
        <index referenceId="INDEX_FIELD_BLOG_TITLE">
            <column name="title" />
        </index>
    </table>


    <table name="magenest_category" resource="default" engine="innodb" comment="Category Table">
        <column xsi:type="smallint" name="category_id" padding="6" unsigned="true" nullable="false" identity="true" comment="Category ID"/>
        <column xsi:type="varchar" name="name" nullable="false" comment="Category Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_id"/>
        </constraint>
        <index referenceId="INDEX_FIELD_CATEGORY_NAME">
            <column name="name" />
        </index>
    </table>

    <table name="magenest_blog_category" resource="default" engine="innodb" comment="Blog Category Table">
        <column xsi:type="smallint" name="blog_id" padding="6" unsigned="true" nullable="false" comment="Blog ID"/>
        <column xsi:type="smallint" name="category_id" padding="6" unsigned="true" nullable="false" comment="Category ID"/>
        <constraint xsi:type="foreign" referenceId="MAGENEST_BLOG_BLOG_ID_MAGENEST_BLOG_CATEGORY_BLOG_ID" column="blog_id"
                    referenceColumn="blog_id" table="magenest_blog_category" referenceTable="magenest_blog" />
        <constraint xsi:type="foreign" referenceId="MAGENEST_CATEGORY_CATEGORY_ID_MAGENEST_BLOG_CATEGORY_CATEGORY_ID" column="category_id"
                    referenceColumn="category_id" table="magenest_blog_category" referenceTable="magenest_category" />
    </table>
</schema>
