<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magenest_banner" resource="default" engine="innodb" comment="Banner Table">
        <column xsi:type="smallint" name="banner_id" padding="6" unsigned="false" nullable="false" identity="true" comment="Banner ID"/>
        <column xsi:type="varchar" name="name" nullable="false" comment="Banner Name"/>
        <column xsi:type="varchar" name="title" nullable="false" comment="Banner Title"/>
        <column xsi:type="varchar" name="image" nullable="false" comment="Banner Image"/>
        <column xsi:type="text" name="add_text" nullable="true" comment="Banner Add Text"/>
        <column xsi:type="varchar" name="enabled" nullable="false" comment="Banner Enabled"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="banner_id"/>
        </constraint>
    </table>
</schema>
